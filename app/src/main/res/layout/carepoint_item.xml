<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pat_appointment_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="2dp"
        card_view:cardCornerRadius="2dp">


        <LinearLayout
            android:id="@+id/pat_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                android:padding="16dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/hospital_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="New Text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/hospital_title"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:text="New Text"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/hospital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hospital_title"
                    android:layout_alignStart="@+id/hospital_title"
                    android:layout_alignLeft="@+id/hospital_title"
                    android:layout_marginTop="20dp"
                    android:text="New Text"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/idPlusIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/distance"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_light_focused" />

                <TextView
                    android:id="@+id/open_or_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hospital_name"
                    android:paddingTop="13dp"
                    android:text="new text"
                    android:textColor="#000" />

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
